    <script>
        // --- Constants ---
        const CURRENCY_STORAGE_KEY = 'urbnflw_currency';
        const CART_COUNT_KEY = 'urbnflw_cart_count'; // Key for localStorage cart count
        const EXCHANGE_RATES = { EUR: 1, USD: 1.1, GBP: 0.85 };
        const CURRENCY_SYMBOLS = { EUR: '€', USD: '$', GBP: '£' };

        // --- DOM Elements ---
        const menuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        const currencySelector = document.getElementById('currency-selector');
        const currencySelectorMobile = document.getElementById('currency-selector-mobile');
        const priceElements = document.querySelectorAll('.product-price'); // Price on this page
        const mainImage = document.getElementById('main-product-image');
        const thumbnailContainer = document.getElementById('thumbnail-container');
        const sizeOptionsContainer = document.getElementById('size-options');
        const colorOptionsContainer = document.getElementById('color-options');
        const selectedColorNameEl = document.getElementById('selected-color-name');
        const addToCartButton = document.getElementById('add-to-cart-button');
        const addedMessage = document.getElementById('added-to-cart-message');
        const cartCountBadgeDesktop = document.getElementById('cart-count-badge-desktop');
        const cartCountBadgeMobile = document.getElementById('cart-count-badge-mobile');
        const quantityInput = document.getElementById('quantity');


        // --- Functions ---

        // Mobile Menu Toggle
        function toggleMobileMenu() {
            mobileMenu.classList.toggle('hidden');
            const isExpanded = !mobileMenu.classList.contains('hidden');
            menuButton.setAttribute('aria-expanded', isExpanded);
        }

        // Close Mobile Menu if clicking outside
        function closeMenuOnClickOutside(event) {
             if (!mobileMenu.classList.contains('hidden')) {
                const isClickInsideMenu = mobileMenu.contains(event.target);
                const isClickOnButton = menuButton.contains(event.target);
                if (!isClickInsideMenu && !isClickOnButton) {
                    toggleMobileMenu();
                }
            }
        }

        // Format Price
        function formatPrice(amount, currency) {
            const symbol = CURRENCY_SYMBOLS[currency] || '';
            return `${symbol}${amount.toFixed(2)}`;
        }

        // Update Prices
        function updatePrices(selectedCurrency) {
            if (!EXCHANGE_RATES[selectedCurrency]) return;
            const rate = EXCHANGE_RATES[selectedCurrency];
            priceElements.forEach(el => {
                const basePriceEur = parseFloat(el.dataset.priceEur);
                if (!isNaN(basePriceEur)) {
                    const convertedPrice = basePriceEur * rate;
                    el.textContent = formatPrice(convertedPrice, selectedCurrency);
                }
            });
        }

        // Handle Currency Change
        function handleCurrencyChange(event) {
            const newCurrency = event.target.value;
            localStorage.setItem(CURRENCY_STORAGE_KEY, newCurrency);
            updatePrices(newCurrency);
             if (currencySelector && currencySelectorMobile) { // Sync selectors
                if (event.target.id === 'currency-selector') currencySelectorMobile.value = newCurrency;
                else currencySelector.value = newCurrency;
            }
        }

        // Image Gallery Thumbnail Click
        function handleThumbnailClick(event) {
             const button = event.target.closest('.thumbnail');
             if (!button || !mainImage) return;

             const newImageSrc = button.dataset.imageSrc;
             if (newImageSrc) {
                 mainImage.src = newImageSrc;
                 // Update selected state for thumbnails
                 thumbnailContainer.querySelectorAll('.thumbnail').forEach(thumb => thumb.classList.remove('selected'));
                 button.classList.add('selected');
             }
        }

         // Option Selection Logic (Generic for Size/Color)
        function handleOptionSelection(container, optionSelector, selectedClass) {
             container.addEventListener('click', (event) => {
                 const targetButton = event.target.closest(optionSelector);
                 if (targetButton) {
                    // Update ARIA checked state and class for all options
                    container.querySelectorAll(optionSelector).forEach(btn => {
                        const isSelected = btn === targetButton;
                        btn.classList.toggle(selectedClass, isSelected);
                        btn.setAttribute('aria-checked', isSelected);
                    });

                     // Update color name display if it's the color selector
                     if (optionSelector === '.color-option-label' && selectedColorNameEl) {
                         selectedColorNameEl.textContent = targetButton.dataset.value;
                     }
                 }
             });
        }

        // Update Cart Count Display
        function updateCartCountDisplay(count) {
            if (cartCountBadgeDesktop) cartCountBadgeDesktop.textContent = count;
            if (cartCountBadgeMobile) cartCountBadgeMobile.textContent = count;

            // Optional: Add a small visual cue on update
             if (cartCountBadgeDesktop) {
                cartCountBadgeDesktop.classList.add('updated');
                setTimeout(() => cartCountBadgeDesktop.classList.remove('updated'), 300); // Remove pulse effect
             }
             if (cartCountBadgeMobile) {
                 cartCountBadgeMobile.classList.add('updated');
                 setTimeout(() => cartCountBadgeMobile.classList.remove('updated'), 300);
             }
        }

        // Handle Add to Cart Click
        function handleAddToCart(event) {
            event.preventDefault(); // Prevent form submission if it's inside a form

            const currentCount = parseInt(localStorage.getItem(CART_COUNT_KEY) || '0');
            const quantityToAdd = parseInt(quantityInput.value) || 1; // Get quantity from input
            const newCount = currentCount + quantityToAdd;

            localStorage.setItem(CART_COUNT_KEY, newCount); // Store updated count
            updateCartCountDisplay(newCount); // Update UI

            // Provide user feedback
            if (addedMessage) {
                addedMessage.classList.add('visible');
                // Optionally hide message after a delay
                setTimeout(() => addedMessage.classList.remove('visible'), 3000);
            }
            // Optional: Disable button temporarily or change text
            addToCartButton.textContent = 'Added!';
            addToCartButton.classList.add('added');
            addToCartButton.disabled = true;
            setTimeout(() => {
                 addToCartButton.textContent = 'Add to Cart';
                 addToCartButton.classList.remove('added');
                 addToCartButton.disabled = false;
            }, 2000); // Reset button after 2 seconds

            console.log(`Added ${quantityToAdd} item(s) to cart. New count: ${newCount}`);
        }


        // Set Current Year in Footer
        function setFooterYear() {
            const yearElement = document.getElementById('current-year');
            if (yearElement) yearElement.textContent = new Date().getFullYear();
        }

        // --- Initialization ---
        function initialize() {
            setFooterYear();

            // Event Listeners
            menuButton.addEventListener('click', toggleMobileMenu);
            document.addEventListener('click', closeMenuOnClickOutside);

            if (currencySelector) currencySelector.addEventListener('change', handleCurrencyChange);
            if (currencySelectorMobile) currencySelectorMobile.addEventListener('change', handleCurrencyChange);
            if (thumbnailContainer) thumbnailContainer.addEventListener('click', handleThumbnailClick);
            if (addToCartButton) addToCartButton.addEventListener('click', handleAddToCart);

            // Initialize option selectors
            if (sizeOptionsContainer) handleOptionSelection(sizeOptionsContainer, '.size-option', 'selected');
            if (colorOptionsContainer) handleOptionSelection(colorOptionsContainer, '.color-option-label', 'selected');

            // Load and apply saved currency preference
            const savedCurrency = localStorage.getItem(CURRENCY_STORAGE_KEY) || 'EUR';
            if (currencySelector) currencySelector.value = savedCurrency;
             if (currencySelectorMobile) currencySelectorMobile.value = savedCurrency;
            updatePrices(savedCurrency);

            // Load and display initial cart count
            const initialCartCount = parseInt(localStorage.getItem(CART_COUNT_KEY) || '0');
            updateCartCountDisplay(initialCartCount);
        }

        // --- Run Initialization ---
        document.addEventListener('DOMContentLoaded', initialize);

    </script>

</body>
</html>
