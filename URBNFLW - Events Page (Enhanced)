    <script>
        // --- Constants ---
        const CURRENCY_STORAGE_KEY = 'urbnflw_currency';
        // Note: No prices on this page, but keep for header consistency
        const EXCHANGE_RATES = { EUR: 1, USD: 1.1, GBP: 0.85 };
        const CURRENCY_SYMBOLS = { EUR: '€', USD: '$', GBP: '£' };

        // --- DOM Elements ---
        const menuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        const currencySelector = document.getElementById('currency-selector');
        const currencySelectorMobile = document.getElementById('currency-selector-mobile');
        const filterContainer = document.getElementById('event-filters');
        const upcomingEventsSection = document.getElementById('upcoming-events');
        const pastEventsSection = document.getElementById('past-events');
        const allEventCards = document.querySelectorAll('.event-card'); // Get all event cards


        // --- Functions ---

        // Mobile Menu Toggle
        function toggleMobileMenu() {
            mobileMenu.classList.toggle('hidden');
            const isExpanded = !mobileMenu.classList.contains('hidden');
            menuButton.setAttribute('aria-expanded', isExpanded);
        }

        // Close Mobile Menu if clicking outside
        function closeMenuOnClickOutside(event) {
             if (!mobileMenu.classList.contains('hidden')) {
                const isClickInsideMenu = mobileMenu.contains(event.target);
                const isClickOnButton = menuButton.contains(event.target);
                if (!isClickInsideMenu && !isClickOnButton) {
                    toggleMobileMenu();
                }
            }
        }

        // Handle Currency Change (updates storage and syncs selectors)
        function handleCurrencyChange(event) {
            const newCurrency = event.target.value;
            localStorage.setItem(CURRENCY_STORAGE_KEY, newCurrency); // Save preference
             if (currencySelector && currencySelectorMobile) { // Sync selectors
                if (event.target.id === 'currency-selector') currencySelectorMobile.value = newCurrency;
                else currencySelector.value = newCurrency;
            }
            console.log("Currency changed to:", newCurrency); // Log change
        }

        // Handle Event Filter Click
        function handleEventFilter(event) {
            if (!event.target.classList.contains('filter-button')) return;

            const filterButtons = filterContainer.querySelectorAll('.filter-button');
            filterButtons.forEach(btn => {
                btn.classList.remove('active');
                btn.classList.add('inactive');
            });
            event.target.classList.remove('inactive');
            event.target.classList.add('active');

            const filterValue = event.target.dataset.filter;

            // Show/Hide Past/Upcoming Sections
            if (filterValue === 'upcoming') {
                upcomingEventsSection.classList.remove('hidden');
                pastEventsSection.classList.add('hidden');
            } else if (filterValue === 'past') {
                upcomingEventsSection.classList.add('hidden');
                pastEventsSection.classList.remove('hidden');
            } else {
                // For type filters, ensure upcoming is visible (or adjust as needed)
                upcomingEventsSection.classList.remove('hidden');
                pastEventsSection.classList.add('hidden');
            }

            // Filter cards based on type (basic example, assumes cards have data-event-type)
            allEventCards.forEach(card => {
                 const cardType = card.dataset.eventType;
                 const isInUpcoming = upcomingEventsSection.contains(card);
                 const isInPast = pastEventsSection.contains(card);

                 let showCard = false;
                 if (filterValue === 'upcoming' && isInUpcoming) showCard = true;
                 else if (filterValue === 'past' && isInPast) showCard = true;
                 else if (filterValue !== 'upcoming' && filterValue !== 'past') {
                     // Type filtering (show only if type matches AND it's in the currently visible section)
                     if (cardType === filterValue && ((!pastEventsSection.classList.contains('hidden') && isInPast) || (!upcomingEventsSection.classList.contains('hidden') && isInUpcoming))) {
                         showCard = true;
                     }
                 }

                 card.style.display = showCard ? '' : 'none'; // Use style.display
            });

            console.log('Filtering events by:', filterValue);
        }


        // Set Current Year in Footer
        function setFooterYear() {
            const yearElement = document.getElementById('current-year');
            if (yearElement) yearElement.textContent = new Date().getFullYear();
        }

        // --- Initialization ---
        function initialize() {
            setFooterYear();

            // Event Listeners
            menuButton.addEventListener('click', toggleMobileMenu);
            document.addEventListener('click', closeMenuOnClickOutside);

            if (currencySelector) currencySelector.addEventListener('change', handleCurrencyChange);
            if (currencySelectorMobile) currencySelectorMobile.addEventListener('change', handleCurrencyChange);
            if (filterContainer) filterContainer.addEventListener('click', handleEventFilter);

            // Load saved currency preference into selectors
            const savedCurrency = localStorage.getItem(CURRENCY_STORAGE_KEY) || 'EUR';
            if (currencySelector) currencySelector.value = savedCurrency;
            if (currencySelectorMobile) currencySelectorMobile.value = savedCurrency;

             // Initial filter application might be needed if default isn't 'upcoming'
             // For now, assumes 'upcoming' is default and visible
        }

        // --- Run Initialization ---
        document.addEventListener('DOMContentLoaded', initialize);
    </script>

</body>
