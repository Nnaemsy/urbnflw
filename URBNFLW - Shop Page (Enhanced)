    <script>
        // --- Constants ---
        const CURRENCY_STORAGE_KEY = 'urbnflw_currency';
        const EXCHANGE_RATES = {
            EUR: 1,
            USD: 1.1, // Example Rate: 1 EUR = 1.1 USD
            GBP: 0.85 // Example Rate: 1 EUR = 0.85 GBP
        };
        const CURRENCY_SYMBOLS = {
            EUR: '€',
            USD: '$',
            GBP: '£'
        };

        // --- DOM Elements ---
        const menuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        const currencySelector = document.getElementById('currency-selector');
        const currencySelectorMobile = document.getElementById('currency-selector-mobile');
        const priceElements = document.querySelectorAll('.product-price'); // Select all price elements

        // --- Functions ---

        // Mobile Menu Toggle
        function toggleMobileMenu() {
            mobileMenu.classList.toggle('hidden');
            // Toggle ARIA expanded state if needed
            const isExpanded = !mobileMenu.classList.contains('hidden');
            menuButton.setAttribute('aria-expanded', isExpanded);
        }

        // Close Mobile Menu if clicking outside
        function closeMenuOnClickOutside(event) {
            if (!mobileMenu.classList.contains('hidden')) {
                const isClickInsideMenu = mobileMenu.contains(event.target);
                const isClickOnButton = menuButton.contains(event.target);
                if (!isClickInsideMenu && !isClickOnButton) {
                    toggleMobileMenu();
                }
            }
        }

        // Format Price according to currency
        function formatPrice(amount, currency) {
            const symbol = CURRENCY_SYMBOLS[currency] || '';
            // Basic formatting, consider Intl.NumberFormat for more complex needs
            return `${symbol}${amount.toFixed(2)}`;
        }

        // Update all prices on the page
        function updatePrices(selectedCurrency) {
            if (!EXCHANGE_RATES[selectedCurrency]) return; // Invalid currency

            const rate = EXCHANGE_RATES[selectedCurrency];

            priceElements.forEach(el => {
                const basePriceEur = parseFloat(el.dataset.priceEur);
                if (!isNaN(basePriceEur)) {
                    const convertedPrice = basePriceEur * rate;
                    el.textContent = formatPrice(convertedPrice, selectedCurrency);
                }
            });
        }

        // Handle Currency Change
        function handleCurrencyChange(event) {
            const newCurrency = event.target.value;
            localStorage.setItem(CURRENCY_STORAGE_KEY, newCurrency); // Save preference
            updatePrices(newCurrency);
            // Sync desktop and mobile selectors if both exist
            if (currencySelector && currencySelectorMobile) {
                if (event.target.id === 'currency-selector') {
                    currencySelectorMobile.value = newCurrency;
                } else {
                    currencySelector.value = newCurrency;
                }
            }
        }

         // Basic JS for Filter Buttons (Example)
        function handleFilterClick(event) {
             if (!event.target.classList.contains('filter-button')) return;

             const filterButtons = document.querySelectorAll('#filters .filter-button');
             // Remove active class from all buttons
             filterButtons.forEach(btn => {
                 btn.classList.remove('active');
                 btn.classList.add('inactive');
             });
             // Add active class to the clicked button
             event.target.classList.remove('inactive');
             event.target.classList.add('active');
             // Add logic here to filter products based on the category
             console.log('Filter by:', event.target.textContent);
         }

        // Set Current Year in Footer
        function setFooterYear() {
            const yearElement = document.getElementById('current-year');
            if (yearElement) {
                yearElement.textContent = new Date().getFullYear();
            }
        }

        // --- Initialization ---
        function initialize() {
            // Set footer year
            setFooterYear();

            // Event Listeners
            menuButton.addEventListener('click', toggleMobileMenu);
            document.addEventListener('click', closeMenuOnClickOutside);

            if (currencySelector) {
                currencySelector.addEventListener('change', handleCurrencyChange);
            }
            if (currencySelectorMobile) {
                 currencySelectorMobile.addEventListener('change', handleCurrencyChange);
            }

            const filterContainer = document.getElementById('filters');
            if (filterContainer) {
                 filterContainer.addEventListener('click', handleFilterClick);
            }


            // Load and apply saved currency preference
            const savedCurrency = localStorage.getItem(CURRENCY_STORAGE_KEY) || 'EUR'; // Default to EUR
            if (currencySelector) currencySelector.value = savedCurrency;
            if (currencySelectorMobile) currencySelectorMobile.value = savedCurrency;
            updatePrices(savedCurrency);
        }

        // --- Run Initialization ---
        // Use DOMContentLoaded to ensure elements are loaded before running scripts
        document.addEventListener('DOMContentLoaded', initialize);

    </script>

